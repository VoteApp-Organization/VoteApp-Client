<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/groupItemLayoutExpanded"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_small_container"
    android:orientation="vertical">


    <TextView
        android:id="@+id/numberOfQuestion"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingStart="5dp"
        android:paddingBottom="40dp"
        android:text="1"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/questionTitleEditText"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="5dp"
        android:layout_toEndOf="@+id/numberOfQuestion"
        android:fontFamily="sans-serif-medium"
        android:hint="Write a question here"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/questionTitleEditText"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Type:"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTitleEditText"
        android:layout_marginTop="6dp"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:layout_toEndOf="@+id/textView5"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/questionTitleEditText"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/typeSpinner"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Mandatory?"
        android:textSize="15sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/isMandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTitleEditText"
        android:paddingStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/textView6" />
</RelativeLayout>
